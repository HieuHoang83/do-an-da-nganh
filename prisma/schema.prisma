generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password      String
  createdAt     DateTime @default(now())
  phone         String   @unique // Thêm số điện thoại, đảm bảo không trùng
  refreshToken  String? // Thêm refresh token, có thể null
  notifications Notify[] // Một User có nhiều Notify
}

model Notify {
  id        String   @id @default(uuid())
  message   String
  read      Boolean  @default(false)
  userId    String // Cột khóa ngoại
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
